<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SuperHeroListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuperheroes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/itemlist_superhero"/>

        <ProgressBar
            android:id="@+id/pbLoading"
            android:background="@color/semitransparent_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/rvSuperheroes"/>

</androidx.constraintlayout.widget.ConstraintLayout>